<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!--increase (duplicate) view size in 4 seconds, of current size, with same proportion-->
    <scale android:duration="4000"
          android:fromXScale="1.0"
          android:fromYScale="1.0"
          android:toXScale="2.0"
          android:toYScale="2.0"
          android:pivotX="50%"
          android:pivotY="50%"
        />

    <!--decrease view size in 4 seconds, to half of current size, with same proportion-->
    <scale android:duration="4000"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:toXScale="0.5"
        android:toYScale="0.5"
        android:pivotY="50%"
        android:pivotX="50%"
        />

    <rotate android:duration="8000"
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
    />

    <!--make view  transparence 20% in 4 seconds-->
    <alpha android:fromAlpha="1.0"
        android:toAlpha="0.2"
        android:duration="4000"
       />

    <!--make view  solid in 4 seconds-->
    <alpha android:fromAlpha="1.0"
        android:toAlpha="5.0"
        android:duration="4000"
        />

</set>